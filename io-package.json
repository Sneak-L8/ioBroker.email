{
    "common": {
        "name":                     "email",
        "version":                  "0.0.1",
        "title":                    "Email Adapter",
        "desc":                     "This adapter allows to send emails from ioBroker",
        "authors": [
            "bluefox <bluefox@ccu.io>"
        ],
        "license":                  "MIT",
        "platform":                 "Javascript/Node.js",
        "mode":                     "subscribe",
        "loglevel":                 "info",
        "messagebox":               true,
        "subscribe":                "system.adapter.email.<INSTANCE>.messagebox",
        "wakeup":                   true
    },
    "native": {
        "transport": "SMTP",
        "transportOptions": {
            "service": "Gmail",
            "auth": {
                "user": "wyx@googlemail.com",
                "pass": "xxxxxx"
            }
        },
        "defaults": {
            "from":    "test <test@test.com>",
            "to":      "abcdef@googlemail.com",
            "subject": "ioBroker"
        }
    },
    "objects": [

    ]
}
